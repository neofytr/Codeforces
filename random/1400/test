dp[0][0] = dp[0][1] = 0;
	set<pair<int, int>> one, two;
	one.insert({dp[0][0] - p[0], 0});
	two.insert({dp[0][1] - p[0], 0});

	for (int i = 1; i <= n; i++) {
		auto [v1, idx1] = *one.begin();
		auto [v2, idx2] = *two.begin();

		dp[i][0] = p[i - 1] + v1 + (arr[i] > arr[idx1] ? 1 : 0);
		dp[i][1] = p[i - 1] + v2 + (arr[i] > arr[idx2] ? 1 : 0);

		one.insert({dp[i][0] - p[i], i});
		two.insert({dp[i][1] - p[i], i});
	}